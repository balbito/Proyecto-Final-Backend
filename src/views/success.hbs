<div class="container mt-4 mb-4">
  <div class="row">
    <div class="col-lg-2 col-md-4 col-sm-12">
      <div class="card border-none">
        <img
          src="https://www.pngall.com/wp-content/uploads/5/Profile-PNG-Images.png"
          class="w-16 h-16 object-cover rounded-circle img-thumbnail"
          alt="Imagen de perfil"
        />
        <form action="/current" method="get">
          <input type="submit" value="View Profile" class="btn btn-dark mt-2" />
        </form>
      </div>
    </div>
    <div class="col-md-8 col-sm-12 mt-4 mb-4">
      <div class="d-flex justify-content-between align-items-center">
        {{#if user}}
          <h1>Welcome {{user.name}}</h1>
        {{else}}
          <h1>Welcome Guest</h1>
        {{/if}}
        <h2>Role: {{user.role}}</h2>
        {{#ifRoleEquals user.role "admin"}}
          <form action="/manager" method="get">
            <input type="submit" value="Manager" class="btn btn-dark" />
          </form>
        {{/ifRoleEquals}}
        <form action="/api/jwt/logout" method="post">
          <input type="submit" value="Logout" class="btn btn-danger" />
        </form>
      </div>
      <img
        src="https://uxwing.com/wp-content/themes/uxwing/download/e-commerce-currency-shopping/order-placed-purchased-icon.png"
        alt=""
        class="mx-auto"
      />
      <div class="alert alert-success mt-4 text-center" role="alert">
        <strong>Congratulations!</strong>
        Your order has been processed correctly.
      </div>
    </div>
  </div>
</div>