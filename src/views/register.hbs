<div class="max-w-md mx-auto bg-white p-8 mt-8 rounded shadow-md">
  <h1 class="text-2xl font-bold mb-4">Register</h1>
  <form id="registerForm">
    <label class="block mb-2">Name</label>
    <input
      type="text"
      name="first_name"
      class="w-full border p-2 mb-4"
      required
    />
    <label class="block mb-2">Last Name</label>
    <input
      type="text"
      name="last_name"
      class="w-full border p-2 mb-4"
      required
    />
    <label class="block mb-2">Email</label>
    <input type="email" name="email" class="w-full border p-2 mb-4" required />
    <label class="block mb-2">Age</label>
    <input type="text" name="age" class="w-full border p-2 mb-4" required />
    <label class="block mb-2">Password</label>
    <input
      type="password"
      name="password"
      class="w-full border p-2 mb-4"
      required
    />
    <input
      type="submit"
      value="Register"
      class="bg-green-500 text-white px-4 py-2 cursor-pointer"
    />
  </form>
  <p class="mt-4">You already have an account?
    <a href="/users/login" class="text-blue-500">Login here</a></p>
</div>
<script src="/js/register.js"></script>