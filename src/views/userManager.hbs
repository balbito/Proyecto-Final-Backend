<div class="container mt-4 mb-4">
  <div class="m-3 d-flex justify-content-center">
    <div class="mr-3">
      <form action="/api/jwt/logout" method="post">
        <input type="submit" value="Logout" class="btn btn-danger" />
      </form>
    </div>
    <div class="mr-3">
      <form action="/products" method="get">
        <input type="submit" value="Profile" class="btn btn-dark" />
      </form>
    </div>
    <div>
      <form action="/manager" method="get">
        <input type="submit" value="Manager" class="btn btn-dark" />
      </form>
    </div>
  </div>

  <hr />

  <div class="p-2 table-responsive">
    <table class="table">
      <thead class="table-dark">
        <tr>
          <th> First Name </th>
          <th> Last Name </th>
          <th> Email </th>
          <th> Age </th>
          <th> Role </th>
          <th> Actions </th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
          <tr class="align-middle">
            <td>{{first_name}}</td>
            <td>{{last_name}}</td>
            <td>{{email}}</td>
            <td>{{age}}</td>
            <td>{{role}}</td>
            <td>
              <button
                type="button"
                class="btn btn-danger btn-delete-user"
                data-user-id="{{_id}}"
              >Delete</button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

<script src="/js/userManager.js"></script>