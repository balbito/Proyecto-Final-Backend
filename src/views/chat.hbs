<div>
  <div class="container-fluid my-10">
    <div class="row">
      <div class="col-md-4 col-sm-12">
        <div class="card border-none">
          <img
            src="https://www.pngall.com/wp-content/uploads/5/Profile-PNG-Images.png"
            class="w-16 h-16 object-cover rounded-circle img-thumbnail"
            alt="Imagen de perfil"
          />
          <form action="/products" method="get">
            <input type="submit" value="Products" class="btn btn-dark mt-2" />
          </form>
        </div>
      </div>
      <div class="col-md-8 col-sm-12">
        <div class="d-flex justify-content-between align-items-center">
          {{#if user}}
            <h1>Welcome {{user.name}}</h1>
          {{else}}
            <h1>Welcome Guest</h1>
          {{/if}}
          <h2>Role: {{user.role}}</h2>
          {{#ifRoleEquals user.role "admin"}}
            <form action="/manager" method="get">
              <input type="submit" value="Manager" class="btn btn-dark mr-2" />
            </form>
          {{/ifRoleEquals}}
          <form action="/api/jwt/logout" method="post">
            <input type="submit" value="Logout" class="btn btn-danger" />
          </form>
        </div>
      </div>
    </div>
    <div class="m-3 justify-center">
      <div>
        <form class="row p-3" action="/" method="post">
          <input
            class="form-control m-1"
            type="email"
            name="user"
            placeholder="User email"
            id="user"
          />
          <input
            class="form-control m-1"
            type="text"
            name="message"
            placeholder="Message"
            id="message"
          />
          <input
            class="btn btn-dark m-2"
            type="submit"
            value="Send"
            id="send-button"
          />
        </form>
      </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/main.js"></script>
  </div>
</div>